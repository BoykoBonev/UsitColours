@model IEnumerable<UsitColours.Areas.Profile.Models.FlightStatisticViewModel>
<div class="row">
    @if (Model.Count() > 0)
            {
                foreach (var flight in Model)
                {
            <div class="row">
                <div class="well" style="float: left; margin-left: 50px; margin-top: 10px; width: 1000px;">
                    <div class="col-md-4">
                        <h3>Departure</h3>
                        Airport:
                        <span>@flight.AirportDepartureName</span><p />
                        Date:
                        <span>@flight.DateOfDeparture </span><p />
                    </div>

                    <div class="col-md-4">
                        <h3>Arrival</h3>
                        Airport:
                        <span>@flight.AirportArrivalName</span><p />
                        Date:
                        <span>@flight.DateOfArrival </span><p />
                    </div>
                    <div class="col-md-4">
                        <h3>Price</h3>
                        <span>@flight.Price</span><p />
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h2>Nothing to show here :(</h2>
    }
</div>
