@model UsitColours.Models.JobViewModel

    <div class="container" style="margin-top: 100px;">
                <header>
                    <p class="job-image">
                        <img src="@Model.ImagePath" alt="Job Image" style="width: 600px; height: 300px;" />
                    </p>
                    <h1 class="job-title">@Model.JobTitle</h1>
                </header>
                <div>
                    <p>
                        @Model.JobDescription
                    </p>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <p>We plan to hire:  @Model.Slots people</p>
                    </div>
                    <div class="col-md-4">
                        <p>Price: $ @Model.Price</p>
                    </div>
                    <div class="col-md-4">
                        <p>Salary per hour: @Model.Wage </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <p>Starting date: <strong> @Model.StartDate.ToString("dd/MM/yyyy")</strong></p>
                    </div>
                    <div class="col-md-6">
                        <p>Ending date: <strong> @Model.EndDate.ToString("dd/MM/yyyy")</strong></p>
                    </div>
                </div>
                <div>
                    @Html.ActionLink("Enroll", "Join", "Job", new { id = Model.Id}, new { @class ="btn btn-warning"} )
                </div>
        <div class="back-link">
            <a href="/SearchJob">Back to job search</a>
        </div>
    </div>
