@model UsitColours.Models.DetailsFlightViewModel

<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="well">
            <div class="row">
                <div class="col-md-5">
                    <h2>@Model.AirportDepartureName</h2>
                </div>
                <div class="col-md-2">
                    <img src="/Images/flytime.png" alt="Fly time" />
                </div>
                <div class="col-md-5">
                    <h2>@Model.AirportArrivalName</h2>
                </div>
            </div>

            <div class="row">
                <div class="col-md-5" style="color: red; font-size: 45px;">
                    @Model.DateOfDeparture.ToString("hh:mm")
                </div>
                <div class="col-md-2" style="color: #7BB618; font-size:30px">
                    @(Model.DateOfArrival - Model.DateOfDeparture)
                </div>
                <div class="col-md-5" style="color: red; font-size: 45px;">
                    @Model.DateOfArrival.ToString("hh:mm")
                </div>
            </div>
            <p>
                On: @Model.DateOfDeparture.ToString("dd/MM/yyyy")
            </p>
            <p>
                By: @Model.AirlineName
            </p>
            <p>
                Available seats: @Model.AvailableSeats
            </p>
            <p>
                Price: @Model.Price
            </p>
        </div>
    </div>
</div>

