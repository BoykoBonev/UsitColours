@model IEnumerable<UsitColours.Models.DetailsFlightViewModel>

<h2>FlightSearchResult</h2>
@{
    if (Model.Count() > 0)
    {
        <div class="table-responsive table-bordered">
            <table class="table">
                <thead>
                    <tr>
                        <td>Departure airport</td>
                        <td>Arival airport</td>
                    </tr>
                </thead>
                <tbody></tbody>
                @foreach (var flight in Model)
                {
                    <tr>
                        <td>@flight.AirportArrivalName</td>
                        <td>@flight.AirportDepartureName</td>
                    </tr>
                }
                <tr>
                    <td>Total price</td>
                    <td>@Model.Sum(f => f.Price)$</td>
                </tr>
                <tr>
                    <td colspan="2">
                        @Html.ActionLink(
                           "More info", "Index", new { controller = "Ticket" }, new { @class = "btn btn-success" })
                    </td>

                    </tr>
            </table>
            </div>
            } else
            {
            <h1>Cant find available flights</h1>
            }
            }
